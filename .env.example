# Database
DATABASE_URL=sqlite+aiosqlite:///./o365_manager.db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Security
# SECRET_KEY will be auto-generated on first run and saved to database
# You can override it here if needed (must be at least 32 characters)
# SECRET_KEY=your-custom-secret-key-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Microsoft Graph API
GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0
GRAPH_API_SCOPE=https://graph.microsoft.com/.default
